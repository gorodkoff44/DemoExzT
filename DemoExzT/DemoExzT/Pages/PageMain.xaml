<Page x:Class="DemoExzT.Pages.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoExzT.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Button x:Name="btnClient" Content="Клиенты" Style="{StaticResource btnMain}" Click="btnClient_Click" ></Button>
                <Button x:Name="btnModel" Content="Модели" Style="{StaticResource btnMain}" ></Button>
                <Button x:Name="btnDeal" Content="Сделка" Style="{StaticResource btnMain}" ></Button>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Button x:Name="btnPostafshik" Content="Поставщики" Style="{StaticResource btnMain}" ></Button>
                <Button x:Name="btnFirm" Content="Фирма" Style="{StaticResource btnMain}" ></Button>
                <Button x:Name="btnPriceList" Content="Прейскурант" Style="{StaticResource btnMain}" ></Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
